
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read the entire portfolio collection
    match /portfolio {
      allow list: if request.auth != null;
    }
    // Allow authenticated users to read, write, and delete individual documents
    match /portfolio/{projectId} {
      allow get, create, update, delete: if request.auth != null;
    }
  }
}
